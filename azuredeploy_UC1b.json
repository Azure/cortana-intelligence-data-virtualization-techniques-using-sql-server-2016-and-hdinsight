{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "username": {
            "type": "string",
            "metadata": {
                "description": "These credentials can be used to submit jobs to the cluster, log into cluster dashboards, log into Ambari, and SSH into the cluster."
            }
        },
        "password": {
            "type": "securestring",
            "metadata": {
                "description": "The password must be at least 10 characters in length and must contain at least one digit, one non-alphanumeric character, and one upper or lower case letter."
            }
        },
        "unique-id": {
            "type": "string",
            "defaultValue": "[uniqueString(resourceGroup().id)]",
            "metadata": {
                "description": "A globally unique value that will be appended to each resource that is created from this template. The default template expression will generate an appropriate random value."
            }
        }
    },
    
    "variables": {
        "default-version": "2015-06-15",
        "hdi-api-version": "2015-03-01-preview",
        "storage-version": "2016-01-01",
        "vm-version": "2016-03-30",
        "storage-account-type": "Standard_LRS",
        "storage-account": "[concat('dv', 'stor', parameters('unique-id'))]",
        "deploy-location": "[resourceGroup().location]",

        "pbvm-name": "[concat('dv', parameters('unique-id'))]",
        "pbvm-public-ip-name": "[concat('dv', '-pbvm-publicip', parameters('unique-id'))]",
        "pbvm-ip-allocation-type": "Dynamic",
        "pbvm-size": "Standard_DS11_v2",
        "pbvm-os-type": "Windows",
        "pbvm-virtual-network-name": "[concat('dv', '-pbvm-servervnet-', parameters('unique-id'))]",
        "pbvm-vnet-id": "[resourceId('Microsoft.Network/virtualNetworks', variables('pbvm-virtual-network-name'))]",
        "pbvm-subnet-ref": "[concat(variables('pbvm-vnet-id'), '/subnets/', variables('pbvm-subnet-name'))]",
        "pbvm-size-of-data-disk": "1023",
        "pbvm-nic-name": "[concat('dv', '-pbvm-nic-', parameters('unique-id'))]",
        "pbvm-subnet-name": "[concat('dv', '-subnet-', parameters('unique-id'))]",
        "pbvm-address-prefix": "10.0.0.0/16",
        "pbvm-subnet-prefix": "10.0.0.0/24",
        "pbvm-dns-label-prefix": "[concat('dv', '-pbvm-dns-', parameters('unique-id'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storage-account')]",
            "apiVersion": "[variables('storage-version')]",
            "location": "[variables('deploy-location')]",
            "sku": {
                "name": "[variables('storage-account-type')]"
            },
            "kind": "Storage",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('pbvm-public-ip-name')]",
            "apiVersion": "[variables('vm-version')]",
            "location": "[variables('deploy-location')]",
            "properties": {
                "publicIPAllocationMethod": "[variables('pbvm-ip-allocation-type')]",
                "dnsSettings": {
                    "domainNameLabel": "[variables('pbvm-dns-label-prefix')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('pbvm-virtual-network-name')]",
            "apiVersion": "[variables('vm-version')]",
            "location": "[variables('deploy-location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('pbvm-address-prefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('pbvm-subnet-name')]",
                        "properties": {
                            "addressPrefix": "[variables('pbvm-subnet-prefix')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('pbvm-nic-name')]",
            "apiVersion": "[variables('vm-version')]",
            "location": "[variables('deploy-location')]",
            "dependsOn": [
                 "[concat('Microsoft.Storage/storageAccounts/',variables('storage-account'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses/', variables('pbvm-public-ip-name'))]",
                "[resourceId('Microsoft.Network/virtualNetworks/', variables('pbvm-virtual-network-name'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "[variables('pbvm-ip-allocation-type')]",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('pbvm-public-ip-name'))]"
                            },
                            "subnet": {
                                "id": "[variables('pbvm-subnet-ref')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('pbvm-name')]",
            "location": "[variables('deploy-location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts/', variables('storage-account'))]"
            ],
            "apiVersion": "[variables('vm-version')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('pbvm-size')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "osType": "[variables('pbvm-os-type')]",
                         "name": "30SEPIMG-osDisk.8739d669-ce62-4e9f-a9ad-78c777fe551f.vhd",
                        "createOption": "FromImage",
                        "image": {
                            "uri": "https://bostonimages.blob.core.windows.net/datavirt-patterns/30SEPIMG-osDisk.8739d669-ce62-4e9f-a9ad-78c777fe551f.vhd"
                        },
                        "vhd": {
                            "uri": "[concat('https://bostonimages.blob.core.windows.net/newvmcontainer-', parameters('unique-id'), '/osDisk.78ecfe8f-65b7-4136-8c27-319bb1d842d7.vhd')]"
                        },
                        "caching": "ReadWrite"
                    },
                    "dataDisks": [
                        {
                            "lun": 0,
                             "name": "30SEPIMG-dataDisk-0.8739d669-ce62-4e9f-a9ad-78c777fe551f.vhd",
                            "diskSizeGB": "[variables('pbvm-size-of-data-disk')]",
                            "createOption": "FromImage",
                            "image": {
                                "uri": "https://bostonimages.blob.core.windows.net/datavirt-patterns/30SEPIMG-dataDisk-0.8739d669-ce62-4e9f-a9ad-78c777fe551f.vhd"
                            },
                            "vhd": {
                                "uri": "[concat('https://bostonimages.blob.core.windows.net/newvmcontainer-', parameters('unique-id'), '/dataDisk-0.78ecfe8f-65b7-4136-8c27-319bb1d842d7.vhd')]"
                            },
                            "caching": "ReadWrite"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[variables('pbvm-name')]",
                    "adminUsername": "[parameters('username')]",
                    "adminPassword": "[parameters('password')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('pbvm-nic-name'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', variables('storage-account'), '.blob.core.windows.net/')]"
                    }
                },
                "provisioningState": 0
            }
        }
    ],
    "outputs": {
        "VM Store": {
            "value": "[variables('storage-account')]",
            "type": "string"
        },
        "PolyBase SQL16": {
            "value": "[variables('pbvm-name')]",
            "type": "string"
        }
    }
}
